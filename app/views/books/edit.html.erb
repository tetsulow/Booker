<h1>Editing Book</h1>
 <% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<%= form_with model: @book, url: update_book_path(@book.id), method: :patch, local: true do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

 <br> <%= f.submit 'Update Book' %>

 <p><%= link_to 'Show',  show_book_path %> |
    <%= link_to 'Back' , book_path %>
 </p>

<% end %>

